	new Spry.Widget.ValidationTextField("checkText3", "none", {minChars:6, maxChars:10, validateOn:["blur"]});<!--(03)-->
	new Spry.Widget.ValidationTextField("checkText4", "custom",{validateOn:["blur"],pattern:"000-0000-0000",useCharacterMasking:true})
	new Spry.Widget.ValidationSelect("checkSelect1",{invalidValue:"×", validateOn:["change"]});
	new Spry.Widget.ValidationCheckbox("checkCheckbox1", {isRequired:false, validateOn:["change"], minSelections:1, maxSelections:3});
	new Spry.Widget.ValidationRadio("checkRadio1",{invalidValue:"×", validateOn:["change"]});
	new Spry.Widget.ValidationTextarea("checkTextarea1", {validateOn:["change"], isRequired:true, counterType:"chars_count", counterId:"countsprytextarea1", minChars:5, maxChars:40});
